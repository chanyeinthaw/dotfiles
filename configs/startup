set $mod Mod4
font pango:monospace 8

#Polybar
# exec --no-startup-id polybar -c ~/.config/i3/polybar.conf status

# Compositor
exec --no-startup-id picom --config ~/.config/i3/picom.conf

# Desktop wallpaper
exec_always --no-startup-id feh --bg-scale ~/.config/i3/background.png

# Setup scripts
exec --no-startup-id /home/chan/.config/i3/setup.sh &

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -u -p win -e -n -i ~/.config/i3/background.png

# nm-applet - desktop environment-independent system tray GUI 
exec --no-startup-id nm-applet
